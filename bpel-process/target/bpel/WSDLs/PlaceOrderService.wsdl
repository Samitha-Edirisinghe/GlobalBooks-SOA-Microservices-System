<?xml version="1.0" encoding="UTF-8"?>
<definitions name="PlaceOrderService"
             targetNamespace="http://globalbooks.com/bpel/placeorder/"
             xmlns="http://schemas.xmlsoap.org/wsdl/"
             xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
             xmlns:tns="http://globalbooks.com/bpel/placeorder/"
             xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    
    <types>
        <xsd:schema targetNamespace="http://globalbooks.com/bpel/placeorder/">
            <xsd:element name="placeOrderRequest">
                <xsd:complexType>
                    <xsd:sequence>
                        <xsd:element name="customerId" type="xsd:string"/>
                        <xsd:element name="items" type="xsd:string"/>
                    </xsd:sequence>
                </xsd:complexType>
            </xsd:element>
            <xsd:element name="placeOrderResponse">
                <xsd:complexType>
                    <xsd:sequence>
                        <xsd:element name="orderId" type="xsd:long"/>
                        <xsd:element name="status" type="xsd:string"/>
                    </xsd:sequence>
                </xsd:complexType>
            </xsd:element>
        </xsd:schema>
    </types>
    
    <message name="PlaceOrderRequestMessage">
        <part name="parameters" element="tns:placeOrderRequest"/>
    </message>
    <message name="PlaceOrderResponseMessage">
        <part name="parameters" element="tns:placeOrderResponse"/>
    </message>
    
    <portType name="PlaceOrderPT">
        <operation name="placeOrder">
            <input message="tns:PlaceOrderRequestMessage"/>
            <output message="tns:PlaceOrderResponseMessage"/>
        </operation>
    </portType>
    
    <binding name="PlaceOrderBinding" type="tns:PlaceOrderPT">
        <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>
        <operation name="placeOrder">
            <soap:operation soapAction=""/>
            <input>
                <soap:body use="literal"/>
            </input>
            <output>
                <soap:body use="literal"/>
            </output>
        </operation>
    </binding>
    
    <service name="PlaceOrderService">
        <port name="PlaceOrderPort" binding="tns:PlaceOrderBinding">
            <soap:address location="http://localhost:8080/ode/processes/PlaceOrderProcess"/>
        </port>
    </service>
    
    <plnk:partnerLinkType name="PlaceOrderLT" xmlns:plnk="http://docs.oasis-open.org/wsbpel/2.0/plnktype">
        <plnk:role name="PlaceOrderService" portType="tns:PlaceOrderPT"/>
    </plnk:partnerLinkType>
</definitions>